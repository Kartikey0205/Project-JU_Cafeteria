<section class="status">
  <div class="container mx-auto px-4 py-2">
    <div class="w-full lg:w-2/3 mx-auto statusBox">
      <div class="flex items-center justify-between mb-12">
        <h1 class="text-md lg:text-xl font-bold part1">
          Track Delivery Status
        </h1>
        <h6 class="bg-white p-1 rounded-full px-4 text-green-600">
          <%= order._id%>
        </h6>

        <input
          id="hiddenInput"
          type="hidden"
          value="<%= JSON.stringify(order)%>"
        />
      </div>
      <ul>
        <li
          class="status_line text-sm md:text-xl pb-12"
          data-status="order_placed"
        >
          <span>Order_Placed</span>
        </li>
        <li
          class="status_line text-sm md:text-xl pb-12"
          data-status="confirmed"
        >
          <span>Order Confirmed</span>
        </li>
        <li class="status_line text-sm md:text-xl pb-12" data-status="prepared">
          <span>Preparation</span>
        </li>
        <li
          class="status_line text-sm md:text-xl pb-12"
          data-status="delivered"
        >
          <span>Out for Delivery</span>
        </li>
        <li class="status_line text-sm md:text-xl" data-status="completed">
          <span>Completed</span>
        </li>
      </ul>
    </div>
  </div>
</section>
