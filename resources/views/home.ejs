<!-- Hero section -->
<section class="hero flex items-center justify-center">
  <div>
    <div class="mx-auto part1">
      <h5 class="text-2xl ml-4 mb-2">
        <em>Are you Hungry?</em>
      </h5>
      <h1 class="text-6xl font-bold">Come on... Don't Wait!!</h1>
    </div>

    <button class="myBtn mt-6 py-2 px-6 rounded-full font-bold text-white">
      Order Now
    </button>
  </div>
</section>
<!-- Hero section ends -->

<!-- Menu Section  -->
<section class="menu container mx-auto py-8 px-4">
  <h1 class="text-2xl font-bold part1">All Menus</h1>
  <div
    class="wrapper mt-6 p-2 grid lg:grid-cols-4 md:grid-cols-2 lg:gap-x-8 lg:gap-y-9 md:gap-x-5 md:gap-y-8"
  >
    <% pizza.forEach((pizza)=>{ %>
    <div class="w-full md:w-64">
      <img class="myImg h-40 mx-auto mb-4" src="/img/<%=pizza.image%>" alt="" />
      <div class="text-center">
        <h2 class="text-lg mb-4"><%= pizza.name %></h2>
        <span class="size p-1 px-4 rounded-full uppercase test-xs"
          ><%= pizza.size %></span
        >
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">â‚¹<%= pizza.price %></span>
          <button
            data-pizza="<%= JSON.stringify(pizza)%>"
            class="add-to-cart p-1.5 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% })%>
  </div>
</section>

