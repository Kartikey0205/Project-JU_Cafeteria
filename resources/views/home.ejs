<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JU-Cafeteria</title>
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merienda&display=swap"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="container mx-auto px-4 flex items-center justify-between py-2">
      <div>
        <img
          class="w-1/2"
          src="/img/restaurant-logo.png"
          alt="Cafeteria_logo"
          srcset=""
        />
      </div>
      <div>
        <ul class="flex items-center tracking-widest font-semibold">
          <li class="ml-6">
            <a href="#">Menu</a>
          </li>
          <li class="ml-6">
            <a href="#">Offers</a>
          </li>
          <li class="ml-6">
            <a href="#">Register</a>
          </li>
          <li class="ml-6">
            <a href="#">Login</a>
          </li>
          <li class="ml-6">
            <a href="#" class="inline-block px-6 py-3 rounded-full"
              ><img src="/img/cart.png" alt="cart" srcset=""
            /></a>
          </li>
        </ul>
      </div>
    </nav>

    <!-- Home section -->
    <section class="hero py-4">
      <div class="container mx-auto px-6 flex items-center justify-between">
        <div class="tracking-wider w-1/2 align-text-top part1 mx-6">
          <h5 class="text-xl">
            <em>Are you Hungry?</em>
          </h5>
          <h1 class="text-6xl font-bold">Come on... Don't Wait!!</h1>
        </div>
        <div class="w-1/2 p-8 part2">
          <img
            class="myImg w-96 h-96 shadow-lg shadow-green-900"
            src="/img/hero-2.jpg"
            alt="homeCafe-photo"
            srcset=""
          />
        </div>
      </div>
    </section>

    <!-- Menu Section -->

    <script src="/js/app.js"></script>
  </body>
</html>
